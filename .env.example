# Example .env for Valkey Core

# --- Core Valkey/Redis Settings ---
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_DB=0
VALKEY_PASSWORD=
VALKEY_USE_SSL=false
VALKEY_SOCKET_TIMEOUT=5
VALKEY_SOCKET_CONNECT_TIMEOUT=5
VALKEY_DECODE_RESPONSES=true
VALKEY_PROTOCOL=3  # Use RESP3 for modern clients

# --- Advanced Valkey Features (VAPI_*) ---
VAPI_SHARD_SIZE=26843545600  # 25GB per shard
VAPI_SHARD_OPS_LIMIT=25000
VAPI_CLUSTER_MODE=false
VAPI_CLUSTER_NODES=
VAPI_SENTINEL_NODES=
VAPI_MAX_CONNECTIONS=100
VAPI_POOL_RECYCLE=600
VAPI_RETRY_ATTEMPTS=3
VAPI_RETRY_BACKOFF=1.5
VAPI_LOCK_TIMEOUT=10
VAPI_LOCK_RETRIES=5
VAPI_LOCK_BACKOFF=0.5
VAPI_CACHE_TTL=300
VAPI_CACHE_PREFIX=valkey:

# --- Monitoring & Metrics ---
PROMETHEUS_PUSHGATEWAY_URL=
PROMETHEUS_METRICS_ENABLED=true
VALKEY_METRICS_NAMESPACE=valkey_core

# --- Security ---
VALKEY_TLS_CA_FILE=
VALKEY_TLS_CERT_FILE=
VALKEY_TLS_KEY_FILE=
VALKEY_TLS_SKIP_VERIFY=false
